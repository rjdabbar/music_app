<h1>Add an album to <%= @band.name %>'s discography</h1>

<%= flash_errors %>

<form action="<%= albums_url %>" method="post">
  <%= form_auth_token %>

  <label for="album_band">Band:</label>
  <select id="album_band" name="album[band_id]">
    <option value=""> </option>
    <% @bands.each do |band| %>
      <option value="<%= band.id %>"
        <%= "selected" if band == @band %>>
        <%= band.name %>
      </option>
    <% end %>
  </select>

  <label for="album_name">Album Name:</label>
  <input id="album_name"
         type="textarea"
         name="album[name]"
         value="">
         
  <br>

  <label for="album_style">Style:</label>
  <label for="album_style_live">Live:</label>
  <input id="album_style_live"
         type="radio"
         name="album[style]"
         value="live">

  <label for="album_style_studio">Studio:</label>
  <input id="album_style_studio"
         type="radio"
         name="album[style]"
         value="studio">

  <button>Create Album</button>
</form>
