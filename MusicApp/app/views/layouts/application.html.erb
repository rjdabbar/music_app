<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<% if signed_in? %>
  <a href="<%= bands_url %>">All Bands</a>
  <%= sign_out_button %>
<% else %>
  <%= sign_in_button %>
  <%= sign_up_button %>
<% end %>
<%= yield %>

</body>
</html>
